<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_LinearLayout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_textview_screen"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:text="0"
        android:textAllCaps="false"
        android:textColor="#33cccc"
        android:textSize="40sp"
        app:fontFamily="sans-serif-condensed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_seven"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_eight"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_nine"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_addition"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:onClick="buttonClick_Operator"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_four"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_five"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_six"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_subtraction"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:onClick="buttonClick_Operator"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_one"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_two"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_three"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_multiplication"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:onClick="buttonClick_Operator"
            android:text="*"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_clear"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:onClick="buttonClick_decimal"
            android:text="."
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_button_zero"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/num_button"
            android:onClick="buttonClick_number"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_button_eval"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:onClick="buttonClick_evaluate"
            android:text="="
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_button_division"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:onClick="buttonClick_Operator"
            android:text="/"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="buttonClick_clear"
            android:text="C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Calculator App \nNiyatee Desai \nBlock 1A"
            android:textColor="#33cccc"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/other_button"
            android:onClick="buttonClick_delete"
            android:text="del"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>